<div class='center_me row justify-content-center'>
<div class="boring col-5">
<h1>Change <%=@current_user.firstname%> <%=@current_user.lastname%>'s Settings</h1>

<form action="/profile/edit" method="post">
  <input type="hidden" name="_method" value="PUT">
  <div class="form-group col-4">
    <label for="password">Change Password:</label>
    <input class="form-control" type="password" name="password" value="<%=@current_user.password%>">
  </div>
  <div class="form-group col-4">
    <label for="password2">Confirm new password:</label>
    <input class="form-control" type="password" name="password2" value="<%=@current_user.password%>">
  </div>
  <button class="btn btn-success" type="submit">Submit changes</button>
</form>


<form action="/profile/edit" method="post">
  <input type="hidden" name="_method" value="DELETE">
  <button class="btn btn-danger float-right" type="submit">DELETE ACCOUNT</button>
</form>
</div>
</div>
